  <script>
    const hearts = document.getElementById('hearts');
    setInterval(() => {
      const heart = document.createElement('div');
      heart.classList.add('heart');
      heart.style.left = Math.random() * 100 + 'vw';
      heart.style.animationDuration = 3 + Math.random() * 3 + 's';
      heart.textContent = 'ğŸ’—'; 
      hearts.appendChild(heart); 
      setTimeout(() => heart.remove(), 6000); 
    }, 300); 

    const mainPhoto = document.getElementById('mainPhoto');
    mainPhoto.addEventListener('click', (e) => {
      const rect = mainPhoto.getBoundingClientRect();
      const originX = rect.left + rect.width / 2;
      const originY = rect.top + rect.height / 2;

      for (let i = 0; i < 20; i++) {
        const heart = document.createElement('div');
        heart.textContent = 'ğŸ’—';
        heart.classList.add('heart');
        heart.style.left = originX + 'px';
        heart.style.top = originY + 'px';
        heart.style.fontSize = (16 + Math.random() * 20) + 'px';
        heart.style.position = 'fixed';
        heart.style.zIndex = 1000;

        const angle = Math.random() * 2 * Math.PI;
        const distance = 100 + Math.random() * 100;
        const x = Math.cos(angle) * distance;
        const y = Math.sin(angle) * distance;

        heart.style.transition = 'transform 1s ease-out, opacity 1s';
        document.body.appendChild(heart);

        setTimeout(() => {
          heart.style.transform = `translate(${x}px, ${y}px)`;
          heart.style.opacity = '0';
        }, 10);

        setTimeout(() => heart.remove(), 1200);
      }
    });

    const cakePopup = document.getElementById('cakePopup');
    const darkOverlay = document.getElementById('darkOverlay');
    document.querySelector('textPath').addEventListener('click', () => {
      darkOverlay.style.display = 'block';
      cakePopup.style.display = 'block';
      setTimeout(() => {
        darkOverlay.style.display = 'none';
        cakePopup.style.display = 'none';
      }, 5000);
    });
  </script>


